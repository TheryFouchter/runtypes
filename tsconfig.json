{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "exclude": ["./lib/**/*", "./examples/**/*", "./src/**/*.spec.ts"]
}
